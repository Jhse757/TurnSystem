@{
    ViewData["Title"] = "Inicio";
}

@* Vista 1 *@
 <div class="container-fluid">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-6 p-3 card d-flex justify-content-center align-items-center text-center">
            <div class="row d-flex justify-content-center">
                <img src="~/img/Logo_turnSystem.png" class="img-fluid logo-min" alt="">
            </div>
            <div class="d-grid d-flex justify-content-center">
                <img class="img-fluid img-size-home" src="~/svg/svg_1.svg" alt="" asp-append-version="true">
