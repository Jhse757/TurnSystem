<div class="container-fluid">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-6 p-3 card d-flex justify-content-center align-items-center text-center">
            <div class="row d-flex justify-content-center">
                <img src="~/img/Logo_turnSystem.png" class="img-fluid logo-min" alt="">
            </div>
            <h1 class="fw-bold text-primary">¿Que tipo de Documento tienes?</h1>
            <div class="row d-flex justify-content-center m-3 gap-2">
                <form asp-action="Type_Document_Selected" asp-controller="Home" method="post">
                    <select name="description" class="form-select" aria-label="Default select example">
                        <option selected>selecciona una opcion</option>
                        @foreach(var document in Model){
                            <option value="@document.description">@document.description</option>
                        }
                    </select>
                    <br>
                    <input type="text" name="document" id="numero_documento" class="form-input" onchange="recibir()">
                    <input type="hidden" name="document2" id="numero_documento2">
                    <br>
                    <div>
                        <div class="row gap-2 gap-2">
                        <button type="button" class="col fs-3 border border-dark miboton" onclick="agregarNumero(1)">
                            1
                        </button>
                        <button type="button" class="col fs-3 border border-dark miboton" onclick="agregarNumero(2)">
                            2
                        </button>
                        <button type="button" type="button" class="col fs-3 border border-dark miboton" onclick="agregarNumero(3)">
                            3
                        </button>
                    </div>
                    <div class="row gap-2">
                        <button type="button" class="col fs-3 border border-dark miboton" onclick="agregarNumero(4)">
                            4
                        </button>
                        <button type="button" class="col fs-3 border border-dark miboton" onclick="agregarNumero(5)">
                            5
                        </button>
                        <button type="button" class="col fs-3 border border-dark miboton" onclick="agregarNumero(6)">
                            6
                        </button>
                    </div>
                    <div class="row gap-2">
                        <button type="button" class="col fs-3 border border-dark miboton" onclick="agregarNumero(7)">
                            7
                        </button>
                        <button type="button" class="col fs-3 border border-dark miboton" onclick="agregarNumero(8)">
                            8
                        </button>
                        <button type="button" class="col fs-3 border border-dark miboton" onclick="agregarNumero(9)">
                            9
                        </button>
                    </div>
                    <div class="row gap-2">
                        <button type="button" class="col fs-3 border border-dark bg-danger miboton" onclick="NumberDelete()" style="padding-right: 14px;">
                            ✕
                        </button>
                        <button type="button" class="col fs-3 border border-dark miboton" onclick="agregarNumero(0)" style="padding: 0 16px">
                            0
                        </button>
                    </div>
                    
                    <br>
                    <button type="submit" class="btn btn-primary"> continuar</button>
                </form>

            </div>
        </div>
    </div>
</div>  